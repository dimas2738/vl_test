{% extends 'base.html.twig' %}

{% block title %}Hello MachineController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 style="text-align: center">{{ controller_name }}! âœ…</h1>


</div>
    <div class="btn-group">
        <a href="{{path('add_machine')}}" class="btn btn-secondary btn-sm mb-4">Add New</a>
    </div>
{% endblock %}
{% block content %}
    <div class="row-cols-1 row-cols-sm-2 row-cols-md-5 g-5" style="width: 50%;height: 50%;align-items: center;display: flex;  ">
    {% for machine in data %}

        <div class="col" style="margin-left: 4px">
            <div class="card shadow-sm  ">
               <a href="{{ path('show_machine',{'id':machine.id}) }}">
                   <img class="bd-placeholder-img card-img-top" width="100%" height="100%"  src="{{ asset('./images/computer.jpeg') }}"/>

               </a>

                <div class="card-body">
                    <p class="card-text">This is a machine # {{ machine.id }} .</p>
                    <p class="card-text">CPU: {{machine.cpu }} </p>
                    <p class="card-text">RAM: {{ machine.ram }}</p>

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="{{ path('show_machine',{'id':machine.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                            <a href="{{ path('edit_machine',{'id':machine.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>

                        </div>
{#                        <small class="text-muted">9 mins</small>#}
                    </div>
                </div>
            </div>
        </div>

    {% endfor%}

    </div>
    <div class="d-flex justify-content-between align-items-center">
    </div>
{% endblock %}
