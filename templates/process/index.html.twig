{% extends 'base.html.twig' %}

{% block title %}Hello ProcessController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}! âœ…</h1>


</div>
    <div class="btn-group">
        <a href="{{path('add_process')}}" class="btn btn-secondary btn-sm mb-4">Add New</a>
    </div>
{% endblock %}

{% block content %}
    <div style="align-content: center">
        <div class=" row-cols-1 row-cols-sm-2 row-cols-md-5 g-4 " style="width: 50%;height: 50%;align-items: center;display: flex;">
            {% for process in processes %}



                <div class="col "  style=" margin-left: 10px">
                    <div class="card shadow-sm  ">
                        <a href="{{ path('show_process', {'id':process.id}) }}">
                            <img class="bd-placeholder-img card-img-top" width="60%" height="60%"  src="{{ asset('./images/process.jpeg') }}"/>

                        </a>

                        <div class="card-body">
                            <p class="card-text">This is a process # {{ process.id }} .</p>
                            <p class="card-text">CPU NEED: {{process.cpuNeed }} </p>
                            <p class="card-text">RAM NEED: {{ process.ramNeed }}</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('show_process', {'id':process.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor%}
        </div>
    </div>
{% endblock %}
