{% extends 'base.html.twig' %}

{% block title %}Hello ProcessController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>
{#    {{ dump(processes) }}#}

</div>
{% endblock %}
{% block content %}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {% for process in processes %}



            <div class="col">
                <div class="card shadow-sm  "
{#                                         style="width: 30rem;"#}
                >
                    <a href="{{ path('show_process', {'id':process.id}) }}">
                        <img class="bd-placeholder-img card-img-top" width="60%" height="60%"  src="{{ asset('./images/process.jpeg') }}"/>

                    </a>

                    <div class="card-body">
                        <p class="card-text">This is a process # {{ process.id }} .</p>
                        <p class="card-text">CPU NEED: {{process.cpuNeed }} </p>
                        <p class="card-text">RAM NEED: {{ process.ramNeed }}</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('show_process', {'id':process.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
{#                            <small class="text-muted">9 mins</small>#}
                        </div>
                    </div>
                </div>
            </div>

        {% endfor%}
    </div>
{% endblock %}
